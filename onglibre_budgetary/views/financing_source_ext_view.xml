<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
        <!-- ******************* ACTIONS ******************** -->
        <record model="ir.ui.view" id="analytic_line_from_financer_tree_view">
            <field name="name">analytic.line.from.financer.tree.view</field>
            <field name="model">account.analytic.line</field>
            <field name="arch" type="xml">
                <tree string="Analytic Tree">
                    <field name="financing_source_id" readonly="1"/>
                    <field name="account_id" readonly="1"/>
                    <field name="expense_area_id" readonly="1"/>
                    <field name="type" readonly="1"/>
                    <field name="name" readonly="1" />
                    <field name="expense_budget" widget="float" readonly="0"/>
                    <field name="assigned" widget="float" readonly="0"/>
                    <field name="updated_expense_budget" widget="float" readonly="0"/>
                    <field name="available_expense" widget="float" readonly="0"/>
                    <field name="remainder" widget="float" readonly="0"/>
                    <field name="expense_request" widget="float" readonly="0"/>
                    <field name="expense_compromised" widget="float" readonly="0"/>
                    <field name="real_expense" widget="float" readonly="0"/>
                    <field name="paid_expense" widget="float" readonly="0"/>
                    <field name="justified_expense" widget="float" readonly="0" />
                </tree>
            </field>
        </record>
        <record id="act_analyticlines_from_financing_source" model="ir.actions.act_window">
            <field name="name">Analytic Lines</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_financing_source_id': [active_id], 
                'default_financing_source_id': active_id,
                'group_by': ['financing_source_id', 'account_id'],
            }</field>
            <field name="domain">[('type','not in', ('budgetary', 'financing_source'))]</field>
            <field name="view_id" ref="analytic_line_from_financer_tree_view"/>
        </record>

        <record model="ir.ui.view" id="financing_source_form_view_inh_budgetaryt">
            <field name="name">financing.source.form.view.inh.budgetary</field>
            <field name="model">financing.source</field>
            <field name="priority" eval="17"/>
            <field name="inherit_id" ref="onglibre_financial_source.financing_source_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@string='Projects']" position="after">
                        <button class="oe_inline oe_stat_button" type="action" string="Analytic Lines"
                            name="%(act_analyticlines_from_financing_source)d" icon="fa-tasks" />
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>