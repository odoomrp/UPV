<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sale_order_form view_inh_budgetary">
            <field name="name">sale.order.form.view.inh.budgetary</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="17"/>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <label for="name" position="before">
                        <group colspan="4" col="6">
                            <field name="account_analytic_id" colspan="2" attrs="{'invisible':[('simulation_cost_line_id','=',False)]}" />
                            <field name="analytic_budgetary_line_id" attrs="{'invisible':[('simulation_cost_line_id','=',False)]}" context="{'tree_view_ref':'onglibre_budgetary.view_account_analytic_line_tree_budgetary'}" colspan="4"/>
                            <field name="financial_source_line_id" attrs="{'invisible':[('simulation_cost_line_id','=',False)]}" context="{'tree_view_ref':'onglibre_budgetary.view_account_analytic_line_tree_budgetary2'}" colspan="4"/>
                            <field name="financing_percentage" colspan="2" attrs="{'invisible':[('simulation_cost_line_id','=',False)]}"/>
                            <field name="simulation_cost_line_id" invisible="1"/>
                        </group>
                    </label>

	                <xpath expr="//tree[@string='Sales Order Lines']/field[@name='price_subtotal']" position="after">
	                	<field name="account_analytic_id"/>
	                	<field name="analytic_budgetary_line_id" />
				        <field name="financial_source_line_id"/>
				        <field name="financing_percentage" />
					</xpath>
                </data>
            </field>
        </record>
        
    	<record model="ir.ui.view" id="sale_order_line_tree_view_inh_budgetary">
    	    <field name="name">sale.order.line.tree.view.inh.budgetary</field>
			<field name="model">sale.order.line</field>
			<field name="priority" eval="17"/>
			<field name="inherit_id" ref="sale.view_order_line_tree" />
			<field name="arch" type="xml">
			     <field name="invoiced" position="after">
                    <field name="account_analytic_id"/>
                    <field name="analytic_budgetary_line_id" />
                    <field name="financial_source_line_id"/>
                    <field name="financing_percentage" />
			     </field>
			</field>
		</record>

    	<record model="ir.ui.view" id="sale_order_line_form_view_inh_budgetary">
    	    <field name="name">sale.order.line.form.view.inh.budgetary</field>
			<field name="model">sale.order.line</field>
			<field name="type">form</field>
			<field name="priority" eval="17"/>
			<field name="inherit_id" ref="sale.view_order_line_form2" />
			<field name="arch" type="xml">
			     <label for="name" position="before">
			         <group colspan="4" col="6">
                        <field name="account_analytic_id" colspan="2"/>
                        <field name="analytic_budgetary_line_id" context="{'tree_view_ref':'onglibre_budgetary.view_account_analytic_line_tree_budgetary'}" colspan="4"/>
                        <field name="financial_source_line_id" context="{'tree_view_ref':'onglibre_budgetary.view_account_analytic_line_tree_budgetary2'}" colspan="4"/>
                        <field name="financing_percentage" colspan="2"/>
			         </group>
			     </label>
			</field>
		</record>    
    </data>
</openerp>