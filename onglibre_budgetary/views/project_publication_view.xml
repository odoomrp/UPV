<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<!-- *********************** VISTA TREE ****************** -->

		<record model="ir.ui.view" id="project_publication_tree_view">
			<field name="name">project.publication.tree.view</field>
			<field name="model">project.publication</field>
			<field name="arch" type="xml">
				<tree string="Publications">
					<field name="name" />
					<field name="publication_type_id" />
					<field name="publication_date" />
					<field name="filing_date" />
					<field name="employee_id" />
					<field name="contact_id" />
				</tree>
			</field>
		</record>

		<!-- ******************* VISTA FORM ******************** -->

		<record model="ir.ui.view" id="project_publication_form_view">
			<field name="name">project.publication.form.view</field>
			<field name="model">project.publication</field>
			<field name="arch" type="xml">
				<form string="Publication">
					<group col="6" colspan="6">
           				<group colspan="2" col="2">
            				<field name="publication_type_id" />
            			</group>
            			<group colspan="4" col="2">
                		</group>
                   	</group>
					<group col="6" colspan="4">
           				<group colspan="3" col="2">
            				<field name="name" />
            			</group>
           				<group colspan="3" col="2">
            				<field name="title" />
            			</group>
                   	 </group>						
					<group col="6" colspan="4">
           				<group colspan="1" col="2">
            				<field name="publication_date" />
            			</group>
           				<group colspan="1" col="2">
            				<field name="filing_date" />
            			</group>
                    	<group colspan="4" col="6">
                   	 	</group>
                   	 </group>	
					<group col="6" colspan="4">
           				<group colspan="2" col="2">
            				<field name="employee_id" />
            			</group>
           				<group colspan="2" col="2">
            				<field name="contact_id" />
            			</group>
                    	<group colspan="2" col="6">
                   	 	</group>
                   	 </group>	
					<separator string="Comments"/>
					<group col="6" colspan="4">
           				<group colspan="6" col="2">
            				<field name="comments" nolabel="1"/> 
            			</group>
                   	 </group>
				</form>
			</field>
		</record>	

		<!-- ***** ACCIÓN PARA LA VENTANA DE LAS VISTAS ***** -->

		<record model="ir.actions.act_window" id="action_publication_call">
			<field name="name">Publications</field>
			<field name="res_model">project.publication</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- ********** DISEÑO SUBMENUS (DERECHA) **********  -->

		<menuitem id="project_publication_menu_view" name="Publications" sequence="45"
			parent="project_master_tables_group_view" action="action_publication_call" />

	</data>
</openerp>
