<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- *********************** VISTA TREE ****************** -->

		<record model="ir.ui.view" id="crm_strategy_tree_view">
			<field name="name">crm.strategy.tree.view</field>
			<field name="model">mail.thread</field>
			<field name="arch" type="xml">
				<tree string="Strategys">
					<field name="name" />
					<field name="campaign_num" />
					<field name="date_create" />
				</tree>
			</field>
		</record>

		<!-- ******************* VISTA FORM ******************** -->

		<record model="ir.ui.view" id="crm_strategy_form_view">
			<field name="name">crm.template.form.view</field>
			<field name="model">mail.thread</field>
			<field name="arch" type="xml">
				<form string="Strategy">
					<group colspan="4" col="6">
						<field name="name" />
						<field name="date_create" />
						<field name="active" />
					</group>
					<notebook colspan="4">
						<page string="Campaigns">
							<field name="campaign_ids" nolabel="1" />
						</page>
						<page string="Communication &amp; History" groups="base.group_extended">
							<field name="message_ids" colspan="4" nolabel="1" mode="tree"/>
							<button string="Add Internal Note" name="%(action_strategy_add_note)d"
								context="{'model': 'crm.strategy' }" icon="terp-document-new" type="action" />
						</page>
					</notebook>

				</form>
			</field>
		</record>

		<!-- ***** ACCIÓN PARA LA VENTANA DE LAS VISTAS ***** -->

		<record model="ir.actions.act_window" id="action_crm_strategy">
			<field name="name">Strategys</field>
			<field name="res_model">mail.thread</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- ********** DISEÑO OPCION DE SUBMENU **********  -->

		<menuitem id="strategy_menu_view" name="Strategys"
			parent="base.menu_sale_config_sales" action="action_crm_strategy" />

	</data>
</openerp>
