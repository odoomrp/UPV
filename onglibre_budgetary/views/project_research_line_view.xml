<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<!-- *********************** VISTA TREE ****************** -->

		<record model="ir.ui.view" id="project_research_line_tree_view">
			<field name="name">project.research.line.tree.view</field>
			<field name="model">project.research.line</field>
			<field name="arch" type="xml">
				<tree string="Line">
					<field name="code" />
					<field name="name" />
					<field name="project_sublines_ids"/>
				</tree>
			</field>
		</record>

		<!-- ******************* VISTA FORM ******************** -->

		<record model="ir.ui.view" id="project_research_line_form_view">
			<field name="name">project.research.line.form.view</field>
			<field name="model">project.research.line</field>
			<field name="arch" type="xml">
				<form string="Line">
         			<field name="code"/>
             		<field name="name"/> 
					<notebook colspan="4">
						<page string="Sublines">
							<field name="project_sublines_ids" nolabel="1"/>		
						</page>
					</notebook>			
				</form>
			</field>
		</record>	

		<!-- ***** ACCIÓN PARA LA VENTANA DE LAS VISTAS ***** -->

		<record model="ir.actions.act_window" id="action_project_research_line">
			<field name="name">Line</field>
			<field name="res_model">project.research.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- ********** DISEÑO SUBMENUS (DERECHA) **********  -->

		<menuitem id="project_research_line_menu_view" name="Lines" sequence="20"
			parent="project_master_tables_group_view" action="action_project_research_line" />

	</data>
</openerp>
