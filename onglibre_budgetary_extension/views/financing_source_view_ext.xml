        <record model="ir.ui.view" id="financing_source_tree_view_inh_budgetary_ext">
            <field name="name">financing.source.tree.view.inh.budgetary.ext</field>
            <field name="model">financing.source</field>
            <field name="type">tree</field>
            <field name="priority" eval="17"/>
            <field name="inherit_id" ref="onglibre_financial_source.financing_source_tree_view"/>
            <field name="arch" type="xml">
                <data>
                	<field name="grant" position="after">
                		<field name="total_recognized" />
                		<field name="total_invoices_emitted" />
                		<field name="total_invoices_billed" />
                	</field>
                </data>
            </field>
        </record>
        
        <record model="ir.ui.view" id="project_from_financer_tree_view_inh_bugetary_ext">
            <field name="name">project_from_financer_tree_view_inh_bugetary_ext</field>
            <field name="model">project.financing</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="onglibre_financial_source.project_from_financer_tree_view" />
            <field name="arch" type="xml">
                <field name="grant" position="after">
                        <field name="percentage_total_recognized" />
                        <field name="percentage_total_invoices_emitted" />
                        <field name="percentage_total_invoices_billed" />
                        <field name="sum_expense_budget" />
                        <field name="sum_expense_request" />
                        <field name="sum_updated_expense_budget" />
                        <field name="sum_expense_compromised" />
                        <field name="sum_available_expense" />
                        <field name="sum_real_expense" />
                        <field name="sum_paid_expense" />
                        <field name="sum_justified_expense" />
                </field>            
            </field>
        </record>
        
        <!-- ******************* ACTIONS ******************** -->
        <record model="ir.ui.view" id="sale_order_from_financer_tree_view">
            <field name="name">sale.order.from.financer.tree.view</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="Sales Orders" colors="grey:state=='cancel';blue:state in ('waiting_date','manual');red:state in ('invoice_except','shipping_except')">
                    <field name="name"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="amount_total" sum="Total Tax Included"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="act_sale_orders_from_financing_source" model="ir.actions.act_window">
            <field name="name">Sale Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_financing_source_id': [active_id], 
                'default_financing_source_id': active_id,
                'simulation_cost_ids': False,
            }</field>
            <field name="domain">[('simulation_cost_ids','=',False)]</field>
            <field name="view_id" ref="sale_order_from_financer_tree_view"/>
        </record>
        
        <record id="act_sale_order_lines_from_financing_source" model="ir.actions.act_window">
            <field name="name">Sale Order Lines</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_financing_source_id': [active_id], 
                'default_financing_source_id': active_id,
                'simulation_cost_line_id': False,
            }</field>
            <field name="domain">[('simulation_cost_line_id','=',False)]</field>
        </record>
        
        <record model="ir.ui.view" id="invoice_from_financer_tree_view">
            <field name="name">invoice.from.financer.tree.view</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <tree colors="blue:state in ('draft');black:state in ('proforma','proforma2','open');gray:state in ('cancel')" string="Invoice">
                    <field name="date_invoice"/>
                    <field name="number"/>
                    <field name="partner_id" groups="base.group_user"/>
                    <field name="rd_serpa" />
                    <field name="serpa_date" />
                    <field name="name"/>
                    <field name="journal_id" invisible="1"/>
                    <field name="period_id" invisible="1" groups="account.group_account_user"/>
                    <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                    <field name="user_id"/>
                    <field name="date_due"/>
                    <field name="origin"/>
                    <field name="currency_id"/>
                    <field name="residual" sum="Residual Amount"/>
                    <field name="amount_untaxed" sum="Untaxed Amount"/>
                    <field name="amount_total" sum="Total Amount"/>
                    <field name="state"/>
                    <button name="invoice_open" states="draft,proforma2" string="Approve" icon="terp-camera_test"/>
                </tree>
            </field>
        </record>
        <record id="act_invoices_from_financing_source" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_financing_source_id': [active_id], 
                'default_financing_source_id': active_id,
                'form_view_ref': 'account.invoice_form',
            }</field>
            <field name="view_id" ref="invoice_from_financer_tree_view"/>
        </record>
        
        <record id="act_invoice_lines_from_financing_source" model="ir.actions.act_window">
            <field name="name">Invoice Lines</field>
            <field name="res_model">account.invoice.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_financing_source_id': [active_id], 
                'default_financing_source_id': active_id,
            }</field>
        </record>

        <record model="ir.ui.view" id="financing_source_form_view_inh_budgetary_ext">
            <field name="name">financing.source.form.view.inh.budgetary.ext</field>
            <field name="model">financing.source</field>
            <field name="type">form</field>
            <field name="priority" eval="17"/>
            <field name="inherit_id" ref="onglibre_financial_source.financing_source_form_view"/>
            <field name="arch" type="xml">
                <data>
                	<xpath expr="//group[@string='Allocation']" position="replace">
                	    <group colspan="4" col="6">
		                    <group colspan="2" string="Allocation">
		                        <field name="grant" />
		                        <field name="grant_without_overheads" />
		                        <field name="overheads" />
		                        <field name="transfered" />
	                            <field name="total_allocated" />
	                            <field name="total_allocated_percent" />
	                            <field name="pending_allocation" />
	                            <field name="pending_allocation_percent" />
		                    </group>
						    <group colspan="2" string="Sale Order">
	                            <field name="total_recognized" />
	                            <field name="total_invoices_emitted" />
	                            <field name="total_invoices_billed" />
	                            <field name="rd_preliminary" />
	                        </group>
						    <group colspan="2" col="4" string="Execution">
	                            <field name="limit_expense" />
	                            <field name="sum_expense_compromised" />
	                            <field name="sum_expense_compromised_percent" />
	                            <field name="sum_real_expense" />
	                            <field name="sum_real_expense_percent" />
	                            <field name="sum_paid_expense" />
	                            <field name="sum_paid_expense_percent" />
	                            <field name="sum_justified_expense" />
	                            <field name="sum_available_expense" />
	                            <field name="sum_available_expense_percent" />
	                        </group>
                        </group>
                	</xpath>
                	<xpath expr="//button[@string='Justification Dates']" position="after">
                         <button class="oe_inline oe_stat_button" type="action" string="Sale Orders"
                            name="%(act_sale_orders_from_financing_source)d" icon="fa-tasks" />
                         <button class="oe_inline oe_stat_button" type="action" string="Sale Order Lines"
                            name="%(act_sale_order_lines_from_financing_source)d" icon="fa-tasks" />
                         <button class="oe_inline oe_stat_button" type="action" string="Invoices"
                            name="%(act_invoices_from_financing_source)d" icon="fa-tasks" />
                         <button class="oe_inline oe_stat_button" type="action" string="Invoice Lines"
                            name="%(act_invoice_lines_from_financing_source)d" icon="fa-tasks" />
	                </xpath>
                </data>
            </field>
        </record>        
        
        <record model="ir.ui.view" id="sale_order_tree_budgetary_ext">
            <field name="name">sale.order.tree.budgetary.ext</field>
            <field name="model">sale.order</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">

	                <tree string="Sales Orders" colors="grey:state=='cancel';blue:state in ('waiting_date','manual');red:state in ('invoice_except','shipping_except')">
                        <field name="name" />
                        <field name="date_order"/>
                        <field name="partner_id"/>
                        <field name="user_id"/>
                        <field name="amount_total" sum="Total Tax Included"/>
                        <field name="state"/>
	                    <field name="financing_source_id" invisible="1" />
	                </tree>

            </field>
        </record>  
        
        
    </data>
</openerp>