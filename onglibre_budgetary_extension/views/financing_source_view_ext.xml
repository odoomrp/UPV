             </record>
             
    <record model="ir.actions.act_window.view" id="action_view_account_supplier_tree_fs_budgetaryext1">
          <field name="sequence" eval="1"/>
          <field name="view_mode">tree</field>
          <field name="view_id" ref="onglibre_budgetary_extension.account_invoice_supplier_tree_budgetary_ext"/>
