    </record>
      
	<record model="ir.actions.act_window.view" id="action_view_account_supplier_form_fs_budgetaryext1">
          <field name="sequence" eval="2"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="account.invoice_form"/>
          <field name="act_window_id" ref="act_financingsource_accountinvoice_opened"/>
