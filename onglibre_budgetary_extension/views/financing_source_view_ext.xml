<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
            
     <record id="act_financingsource_saleorder_opened" model="ir.actions.act_window">
           <field name="name">Sale Order</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">sale.order</field>
           <field name="src_model">financing.source</field>
           <field name="view_type">form</field>
           <field name="view_mode">tree,form</field>
           <field name="search_view_id" ref="sale.view_sales_order_filter"/>
           <field name="context">{'search_default_financing_source_id':[active_id], 'default_financing_source_id':active_id,'partner_id': res_partner_id,'simulation_cost_ids': False}</field>
           <field name="domain">[('financing_source_id','=',active_id),('partner_id','=',res_partner_id),('simulation_cost_ids','=',False)]</field>
    </record>
           	
    <record model="ir.actions.act_window.view" id="action_view_order_tree_fs_budgetaryext1">
          <field name="sequence" eval="1"/>
          <field name="view_mode">tree</field>
          <field name="view_id" ref="onglibre_budgetary_extension.view_order_tree_budgetaryext1"/>
          <field name="act_window_id" ref="act_financingsource_saleorder_opened"/>
    </record>
      
	<record model="ir.actions.act_window.view" id="action_view_order_form_fs_budgetaryext1">
          <field name="sequence" eval="2"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="onglibre_budgetary_extension.view_order_form_budgetaryext1"/>
          <field name="act_window_id" ref="act_financingsource_saleorder_opened"/>
    </record>
    
        <record model="ir.ui.view" id="account_invoice_supplier_tree_budgetary_ext">
            <field name="name">account.invoice.supplier.tree.budgetary.ext</field>
            <field name="model">account.invoice</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
              <tree colors="blue:state in ('draft');black:state in ('proforma','proforma2','open');gray:state in ('cancel')" string="Invoice">
                  <field name="date_invoice"/>
                  <field name="number"/>
                  <field name="partner_id" groups="base.group_user"/>
                  <field name="rd_serpa" />
				  <field name="serpa_date" />
                  <field name="name"/>
                  <field name="journal_id" invisible="1"/>
                  <field name="period_id" invisible="1" groups="account.group_account_user"/>
                  <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                  <field name="user_id"/>
                  <field name="date_due"/>
                  <field name="origin"/>
                  <field name="currency_id"/>
                  <field name="residual" sum="Residual Amount"/>
                  <field name="amount_untaxed" sum="Untaxed Amount"/>
                  <field name="amount_total" sum="Total Amount"/>
                  <field name="state"/>
                  <button name="invoice_open" states="draft,proforma2" string="Approve" icon="terp-camera_test"/>
              </tree>

            </field>
        </record>  

