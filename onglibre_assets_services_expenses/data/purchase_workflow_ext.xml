<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="purchase.act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="purchase.purchase_order"/>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="flow_stop">True</field>
            <field name="action">action_cancel()</field>
        </record>    
    
        <record id="act_request" model="workflow.activity" >
	        <field name="wkf_id" ref="purchase.purchase_order"/>
	        <field name="name">request</field>
	        <field name="kind">function</field>
	        <field name="action">action_request()</field>
        </record>   
        
        <record id="trans_draft_request" model="workflow.transition" >
		    <field name="act_from" ref="purchase.act_draft" />
		    <field name="act_to" ref="act_request" />
		    <field name="signal">purchase_request</field>
		</record>
		
        <record id="trans_request_cancel" model="workflow.transition">
            <field name="act_from" ref="act_request"/>
            <field name="act_to" ref="purchase.act_cancel"/>
            <field name="signal">purchase_cancel</field>
        </record>
		
		<record id="trans_request_confirmed" model="workflow.transition" >
		    <field name="act_from" ref="act_request" />
		    <field name="act_to" ref="purchase.act_confirmed" />
		    <field name="signal">purchase_confirm</field>
		</record>
    </data>
</openerp>