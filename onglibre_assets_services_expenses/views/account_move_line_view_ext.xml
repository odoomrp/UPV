<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_move_form_inh_assetsservices">
            <field name="name">view.move.form.inh.assetsservices</field>
            <field name="model">account.move</field>
            <field name="priority" eval="17"/>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <data>
	                <xpath expr="//page[@string='Information']//group//group//field[@name='analytic_account_id']" position="replace" />
	                <xpath expr="///page[@string='Information']" position="after" >
	                    <page string="Analytic">
	                    	<group colspan="4">
                            	<field name="analytic_account_id" on_change="onchange_account()" />
                            	<field name="budgetary_line_id" on_change="onchange_budgetary_line(analytic_account_id,budgetary_line_id)" context="{'tree_view_ref':'onglibre_assets_services_expenses.view_account_analytic_line_tree_assetsservices'}"/>
                            	<field name="line_financing_source_ids" nolabel="1" context="{'account_analytic_id':analytic_account_id,'budgetary_line_id':budgetary_line_id}" colspan="4"/>
                            </group>
	                    </page>
	                </xpath>
	                <xpath expr="//tree[@string='Journal Items']/field[@name='analytic_account_id']" position="after">
	                    <field name="budgetary_line_id"/>
	                    <field name="line_financing_source_ids" />
	                </xpath>
                </data>
            </field>
        </record>
        
    	<record model="ir.ui.view" id="view_move_line_tree_inh_assetsservices">
    	    <field name="name">view.move.line.tree.inh.assetsservices</field>
			<field name="model">account.move.line</field>
			<field name="priority" eval="17"/>
			<field name="inherit_id" ref="account.view_move_line_tree" />
			<field name="arch" type="xml">
			    <xpath expr="//tree/field[@name='analytic_account_id']" position="after">
			        <field name="budgetary_line_id"/>
	                <field name="line_financing_source_ids" />
			    </xpath>
			</field>
		</record>
		
    	<record model="ir.ui.view" id="view_move_line_form_inh_assetsservices">
    	    <field name="name">view.move.line.form.inh.assetsservices</field>
			<field name="model">account.move.line</field>
			<field name="priority" eval="17"/>
			<field name="inherit_id" ref="account.view_move_line_form" />
			<field name="arch" type="xml">
			    <xpath expr="//group[@string='Analytic']/field[@name='analytic_account_id']" position="replace" />
                <xpath expr="//page[@string='Information']" position="after" >
                    <page string="Analytic">
                    	<group colspan="4">
                           	<field name="analytic_account_id" on_change="onchange_account()" domain="[('type','in',('normal','contract'))]"/>
                           	<field name="budgetary_line_id" on_change="onchange_budgetary_line(analytic_account_id,budgetary_line_id)" context="{'tree_view_ref':'onglibre_assets_services_expenses.view_account_analytic_line_tree_assetsservices'}"/>
                           	<field name="line_financing_source_ids" nolabel="1" context="{'account_analytic_id':analytic_account_id,'budgetary_line_id':budgetary_line_id}" colspan="4"/>
                           </group>
                    </page>
                </xpath>
			</field>
		</record>
		
    	<record model="ir.ui.view" id="view_move_line_form2_inh_assetsservices">
    	    <field name="name">view.move.line.form2.inh.assetsservices</field>
			<field name="model">account.move.line</field>
			<field name="priority" eval="17"/>
			<field name="inherit_id" ref="account.view_move_line_form2" />
			<field name="arch" type="xml">
			    <field name="analytic_account_id" position="replace" />
                <xpath expr="//page[@string='Information']" position="after" >
                    <page string="Analytic">
                    	<group colspan="4">
                           	<field name="analytic_account_id" on_change="onchange_account()" groups="analytic.group_analytic_accounting"/>
                           	<field name="budgetary_line_id" context="{'tree_view_ref':'onglibre_assets_services_expenses.view_account_analytic_line_tree_assetsservices'}"/>
                           	<field name="line_financing_source_ids" nolabel="1" context="{'account_analytic_id':analytic_account_id,'budgetary_line_id':budgetary_line_id}" colspan="4"/>
                           </group>
                    </page>
                </xpath>
			</field>
		</record>
    </data>
</openerp>